<div class="p-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Lista de Libros</h1>
    <div>
      <a href="/books/add" class="btn btn-success me-2">Agregar Libro</a>
      <a href="/books/search" class="btn btn-primary">Buscar</a>
    </div>
  </div>

  
  <table class="table table-bordered table-hover">
    <thead class="table-light">
      <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Año</th>
        <th>Edición</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% books.forEach(book => { %>
        <tr>
          <td><%= book.titulo %></td>
          <td><%= book.autor %></td>
          <td><%= book.anio %></td>
          <td><%= book.edicion %></td>
          <td>
            <div class="d-flex gap-2">
              <a href="/books/<%= book._id %>" class="btn btn-primary">Ver</a>
              <a href="/books/<%= book._id %>/edit" class="btn btn-warning btn-sm">Editar</a>
              <form action="/books/<%= book._id %>?_method=DELETE" method="POST" style="margin:0">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este libro?')">Eliminar</button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
